{
  "ignore": [
    "**/*.md",
    "**/*.svg",
    "**/*.eot",
    "**/*.ttf",
    "**/*.xml",
    "**/*.woff",
    "**/*.DS_Store",
    "**/*.config.js",
    "**/*.cer",
    "**/*.log",
    "**/.*",
    "**/openapi-types.ts",
    "scripts/dtsgen-wrapper.js"
  ],
  "license": "../LICENSE.txt",
  "licenseFormats": {
    "ts|js|css|scss": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "vue": {
      "prepend": "<!--",
      "append": " -->",
      "eachLine": {
        "prepend": "   "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}